
page {
  height: 100%;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
  background-color: #fff;
}

.userinfo {
  padding: 0rpx 0;
  height: 150px;
 background: #3190FA;
}

.userinfo-avatar {
 float: left;
 width: 100%;
 height: 100%;
 
}

/*表单内容*/

.login-from {
  margin-top: 0rpx;
  flex: auto;
  height: 100%;
}

.login_view {
  background-color: #fff;
  line-height: 44px;
  width: 90%;
  border-bottom:1px solid #3190FA; 
  margin-left: 5%;
  margin-top: 20px;
}

/*输入框*/

.nameImage, .keyImage {
  margin-left: 10px;
  width: 15px;
  height: 15px;
}

.login_lable {
  margin: 15px 15px 15px 40px;
  color: #545454;
  font-size: 16px;
}

.login_text {
  flex: block;
  float: right;
  text-align: left;
  margin-right: 15%;
  margin-top: 11px;
   color: #545454;
  font-size: 16px;
 
}

.line {
  width: 100%;
  height: 1px;
  background-color: #ccc;
  margin-top: 1px;
}

/*按钮*/

.login_button {
  width: 100%;
  height: auto;
 
  margin-top: 60px;
  margin-bottom: 0px;
  padding-bottom: 0px;
}

.login_button {
  width: 90%;
  margin-top: 35px;
}
