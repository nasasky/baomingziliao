<!--logs.wxml-->
<view class="login_container">
<view bindtap="bindViewTap" class="userinfo">
    <image class="userinfo-avatar" src="cloud://aoyou-d15ed1.616f-aoyou-d15ed1/logo.jpg" background-size="cover" /> </view>

 <view class="login_view">
  <text class="login_lable">账号：</text>
  <input class="login_text" placeholder="请输入登录账号" bindinput="listenerUsernameInput"/>
 </view>
 <view class="login_view">
  <text class="login_lable">密码：</text>
  <input class="login_text" placeholder="请输入密码" password="true" bindinput="listenerPasswordInput"/>
 </view>
 <view>
  <button class="login_button" bindtap="loginAction" style='background:#3190FA;color:white;letter-spacing:10px;'>登录</button>
 </view>


 <view  wx:for="{{list}}" wx:key="list">
  <view>状态:{{item.status}}</view>
  <view>描述:{{item.msg}}</view>
  <view>账号:{{item.user_name}}</view>
  <view>姓名:{{item.nick_name}}</view>
   <view>手机号:{{item.mobile}}</view>
  <view>id:{{item.id}}</view>
</view>

</view>

