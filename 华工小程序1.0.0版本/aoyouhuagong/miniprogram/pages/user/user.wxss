page {
  height: 100%;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
  background-color: #fff;
}

.userinfo {
  padding: 0rpx 0;
  height: 170px;
  background: #3190fa;
 position: relative;
}

.userinfo-avatar {
  float: left;
  width: 100%;
  height: 100%;
}

/*表单内容*/

.login-from {
  margin-top: 0rpx;
  flex: auto;
  height: 100%;
}

.login_view {
  background-color: #fff;
  line-height: 44px;
  width: 90%;
  border-bottom: 1px solid #3190fa;
  margin-left: 5%;
  margin-top: 20px;
}

/*输入框*/

.nameImage, .keyImage {
  margin-left: 10px;
  width: 15px;
  height: 15px;
}

.login_lable {
  margin: 15px 15px 15px 40px;
  color: #545454;
  font-size: 16px;
}

.login_text {
  flex: block;
  float: right;
  text-align: left;
  margin-right: 15%;
  margin-top: 11px;
  color: #545454;
  font-size: 16px;
}

.line {
  width: 100%;
  height: 1px;
  background-color: #ccc;
  margin-top: 1px;
}

/*按钮*/

.login_button {
  width: 100%;
  height: auto;
  margin-top: 60px;
  margin-bottom: 0px;
  padding-bottom: 0px;
}

.login_button {
  width: 90%;
  margin-top: 35px;
}

.touxiang {
  position: absolute;
margin: auto;
left: 0;
right: 0;
  margin-top: 40px;
  width: 70px;
  height: 70px;
  border-radius: 50%;
}

.avatar {
  float: left;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  bottom: 20px;
}

.nickname {
margin-top: 120px;
  color:white;
  text-align: center;
  font-size: 20px;
  width: 100%;
  z-index: 9;
}

.xian {
  float: left;
  width: 100%;
  height: 20px;
  background: #ebebeb;
}

.faqi {
  float: left;
  margin-left: 2.5%;
  height:50px;
  border-bottom: 1px solid #ebebeb;
  margin-top: 10px;
  width: 95%;
}

.huodong {
  font-size: 18px;
  line-height: 40px;
  margin-left: 10px;
  margin-bottom: 10px;
}
.imgd{
  float: left;
  width: 40px;
  height: 40px;
margin-bottom: 10px;
}
.imgdx{
  float: right;
  width: 40px;
  height: 40px;
margin-bottom: 10px;
}